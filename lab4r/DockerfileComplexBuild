FROM eclipse-temurin:17-jdk-jammy
WORKDIR /app
COPY . /app
RUN apt-get update && apt-get install -y curl unzip
RUN curl -L -o sbt.zip https://github.com/sbt/sbt/releases/download/v1.9.0/sbt-1.9.0.zip && unzip sbt.zip -d /opt && rm sbt.zip
ENV PATH="/opt/sbt/bin:${PATH}"
RUN sbt compile
CMD ["sbt", "run"]